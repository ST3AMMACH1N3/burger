<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <div>
                    {{burger_name}}
                    <button data-id={{id}} class="devour-btn">Devour</button>
                </div>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <div>
                    {{burger_name}}
                </div>
            </li>
        {{/if}}
    {{/each}}
</ul>

<form action="/api/burger" method="post">
    <input type="text" name="name" id="name">
    <button type="submit" id="submit">Order Burger</button>
</form>